<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.skotlinyard.scan4students">

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logos4s"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Scan4StudentsEx">
        <activity android:name=".view.CreateNotebookActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.StatsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.UserProfileActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.RegistrationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.CameraActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.HomeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.SearchActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.VisualizeNotebooksActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.NotebookViewActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.ImageFullActivity"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>